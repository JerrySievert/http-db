#!/usr/bin/env node

var user = require('../lib/user');
var config = require('../config.json');

var argv = require('yargs')
  .usage('Usage: $0 -u [username] -p [password]')
  .demand([ 'u', 'p' ])
  .argv;

var userData = {
  username: argv.u,
  password: argv.p,
  active: true,
  stores: [ ]
};

user.create(userData, function (err) {
  if (err) {
    console.log(err);
  } else {
    console.log('User added');
  }
});
